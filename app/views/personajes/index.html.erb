<p id="notice"><%= notice %></p>

<h1>Personajes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personajes.each do |personaje| %>
      <tr>
        <td><%= personaje.name %></td>
        <td><%= personaje.age %></td>
        <td><%= personaje.creator %></td>
        <td><%= link_to 'Show', personaje, class:'button radius' %></td>
        <td><%= link_to 'Edit', edit_personaje_path(personaje), class:'button radius success' %></td>
        <td><%= link_to 'Destroy', personaje, method: :delete, data: { confirm: 'Are you sure?' },class:'button radius alert' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Personaje', new_personaje_path, class:'button radius success' %>
